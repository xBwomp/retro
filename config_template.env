# RetroForum Configuration Template
# Copy this file to .env or set these as environment variables

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_USER=your_mysql_username
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=retroforum

# Flask Configuration
SESSION_SECRET=your-random-secret-key-here-change-this
FLASK_ENV=production

# Firebase Authentication (get these from Firebase Console)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_APP_ID=your-firebase-app-id

# Server Configuration (optional)
HOST=0.0.0.0
PORT=5000